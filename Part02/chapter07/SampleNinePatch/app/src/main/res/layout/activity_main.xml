<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!-- 일반 이미지를 배경으로 만든 작은 버튼 정의 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small"
        android:textColor="#ffffffff"
        android:background="@drawable/button_image_01"/>

    <!-- 일반 이미지를 배경으로 만든 중간 버튼 정의 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MediumMediumMedium"
        android:textColor="#ffffffff"
        android:background="@drawable/button_image_01"/>

    <!-- 일반 이미지를 배경으로 만든 큰 버튼 정의 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LongLongLongLongLongLongLongLongLong"
        android:textColor="#ffffffff"
        android:background="@drawable/button_image_01" />

    <!-- 나인패치 이미지를 배경으로 만든 작은 버튼 정의 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small"
        android:textColor="#ffffffff"
        android:background="@drawable/button_image_02"/>

    <!-- 나인패치 이미지를 배경으로 만든 중간 버튼 정의 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MediumMediumMedium"
        android:textColor="#ffffffff"
        android:background="@drawable/button_image_02"/>

    <!-- 나인패치 이미지를 배경으로 만든 큰 버튼 정의 -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LongLongLongLongLongLongLongLongLong"
        android:textColor="#ffffffff"
        android:background="@drawable/button_image_02" />
</LinearLayout>